<Window x:Class="Asiel.Windows.WinkelNieuwProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asiel.Windows"
        mc:Ignorable="d"
        Title="Winkel - Nieuw product" Height="300" Width="300" Background="#FF5F5C3B" Foreground="White">
    <Grid>
        <TextBox x:Name="TbNaam" HorizontalAlignment="Left" Height="36" Margin="10,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" FontSize="18" />
        <TextBox x:Name="TbPrijs" HorizontalAlignment="Left" Height="36" Margin="10,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" FontSize="18" />
        <Label Content="Naam" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Foreground="White" />
        <Label Content="Prijs" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top" Foreground="White" />
        <Button x:Name="BtnProductToevoegen" Content="Opslaan" HorizontalAlignment="Left" Margin="10,191,0,0" VerticalAlignment="Top" Width="272" Height="36" Background="#FFF15748" Foreground="White" Click="BtnProductToevoegen_Click" FontSize="18" />
    </Grid>
</Window>